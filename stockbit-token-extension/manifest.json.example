{
  "manifest_version": 3,
  "name": "Stockbit Token Syncer",
  "version": "1.0",
  "description": "Captures Bearer token from Stockbit and syncs it to the API.",
  "permissions": [
    "webRequest"
  ],
  "host_permissions": [
    "https://*.stockbit.com/*",
    "https://adimowlogy.netlify.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
